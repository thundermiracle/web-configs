{
  "version": "0.1.0",
  "name": "web-configs",
  "author": "ThunderMiracle",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write . '!**/eslint-plugin/tests/fixtures/**/*' '!**/*.{hbs,hbs.js}'",
    "test": "jest",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --cache",
    "check": "lerna run check",
    "generate": "plop",
    "version-bump": "lerna version --no-push --include-merged-tags",
    "version": "node scripts/update-changelogs-on-version.js",
    "generate:package": "plop package && yarn plop docs",
    "updated": "lerna updated"
  },
  "devDependencies": {
    "@swc/core": "^1.2.135",
    "@swc/jest": "^0.2.17",
    "@types/jest": "^26.0.24",
    "eslint": "^8.3.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "plop": "^2.6.0",
    "prettier": "^2.0.5"
  },
  "prettier": "@web-configs/prettier"
}
