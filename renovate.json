{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly",
    "group:allNonMajor",
    "group:linters",
    "group:babelMonorepo"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "platformCommit": true,
  "platformAutomerge": true,
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "extends": "packages:jsTest",
      "matchPackageNames": [
        "vitest"
      ],
      "groupName": "JS test packages"
    }
  ],
  "ignoreDeps": [
    "node",
    "graphql"
  ]
}
